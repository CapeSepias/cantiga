{% extends 'CantigaCoreBundle:layout:common-layout.html.twig' %}

{% block box_header %}
	<h4>{{ 'Edit: 0' | trans([item.name], 'general') }}</h4>
{% endblock %}

{% block box_body %}

	{{ form_start(form) }}
	<fieldset>
		<legend>{{ 'Course information' | trans }}</legend>
		<div class="row">
			<div class="col-md-12 col-xs-12">
				{{ form_row(form.name) }}
			</div>
			<div class="col-md-12 col-xs-12">
				{{ form_row(form.description) }}
			</div>
			<div class="col-md-6 col-xs-12">
				{{ form_row(form.authorName) }}
			</div>
			<div class="col-md-6 col-xs-12">
				{{ form_row(form.authorEmail) }}
			</div>
		</div>
	</fieldset>
	<fieldset>
		<legend>{{ 'Course properties' | trans }}</legend>
		<div class="row">
			<div class="col-md-6 col-xs-12">
				{{ form_row(form.presentationLink) }}
				{{ form_row(form.deadline) }}
				{{ form_row(form.displayOrder) }}
				{{ form_row(form.isPublished) }}
			</div>
			<div class="col-md-6 col-xs-12">
				{{ form_row(form.notes) }}
			</div>
		</div>
	</fieldset>
	{{ form_end(form) }}
{% endblock %}

{% block javascripts_inline %}
{{ use_icheck() }}
{% endblock %}