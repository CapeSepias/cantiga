{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
	{{ text.title }}
{% endblock %}

{% block page_subtitle %}
	{{ 'Help pages' | trans([], 'pages') }}
{% endblock %}

{% block page_content %}
<div class="col-md-8 col-xs-12">
	<div class="box">
		<div class="box-header">
			<ul class="nav nav-pills">
				{% for page in pages %}
					{% if page.current %}
					<li role="presentation" class="active"><a href="{{ page.url }}">{{ page.title | trans([], 'pages') }}</a></li>
					{% else %}
					<li role="presentation"><a href="{{ page.url }}">{{ page.title | trans([], 'pages') }}</a></li>	
					{% endif %}
				{% endfor %}
			</ul>
		</div>
		<div class="box-body">
			{{ text.content | raw }}
		</div>
	</div>
</div>
{% endblock %}