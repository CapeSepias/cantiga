{% extends 'CantigaCoreBundle:layout:list-layout.html.twig' %}

{% block column_list %}
<tr>
	<th width="30">#</th>
	<th>{{ 'Name' | trans }}</th>
	<th width="200">{{ 'Location' | trans }}</th>
	<th width="200">{{ 'Note' | trans }}</th>
	<th width="80">{{ 'Actions' | trans({}, 'general') }}</th>
</tr>
{% endblock %}

{% block custom_datatable_config %}
	ajax: "{{ spath('project_memberlist_ajax_list') }}",
	columnDefs: [
		{{ dt_col_link(dataTable, 'name', 'profile_link') }}
		{{ dt_actions(dataTable, [
			{ 'link': 'profile_link', 'name': 'See profile' | trans, 'label': 'btn-primary' }
		]) }}
	]
{% endblock %}