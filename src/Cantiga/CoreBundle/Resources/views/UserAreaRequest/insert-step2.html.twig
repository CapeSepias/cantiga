{% extends 'CantigaCoreBundle:layout:base-layout.html.twig' %}

{% block page_title %}
	{{ 'Request a new area' | trans }}
{% endblock %}

{% block page_content %}
<div class="row">
	<div class="col-md-12">
		<div class="box">
			<div class="box-header with-border">
				<h3 class="box-title">{{ text.title }}</h3>
			</div>
			<div class="box-body">
				{{ text.content | raw }}
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="box">
			<div class="box-body">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-6 col-xs-12">
						{{ form_row(form.name) }}
					</div>
					<div class="col-md-6 col-xs-12">
						{{ form_row(form.territory) }}
					</div>
				</div>
				{% include formRenderer.template with { 'formRenderer': formRenderer, 'form': form } only %}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}